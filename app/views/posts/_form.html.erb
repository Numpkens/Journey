 <div class="editor-container d-flex flex-column align-items-center">
     <%= form_with(model: post, local: true, class: "post-form text-center w-100") do |form| %>
       <% if post.errors.any? %>
         <div class="alert alert-danger">
           <h4 class="alert-heading"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
           <ul class="mb-0">
             <% post.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
             <% end %>
           </ul>
         </div>
       <% end %>

       <div class="editor-header w-100">
         <%= form.label :title, class: "form-label" %>
         <%= form.text_field :title,
             class: "form-control form-control-lg text-center",
             placeholder: "Enter your post title...",
             autofocus: true %>
       </div>

       <div class="editor-content w-100">
         <%= form.label :content, class: "form-label" %>
         <%= form.text_area :content,
             class: "form-control content-editor",
             placeholder: "Write your story...",
             rows: 30 %>
       </div>

       <div class="editor-media w-100">
         <%= form.label :thumbnail, "Cover Image", class: "form-label" %>
         <div class="upload-container">
           <%= form.file_field :thumbnail,
               class: "form-control",
               accept: 'image/*' %>
         </div>
       </div>

       <div class="editor-actions w-100 d-flex justify-content-center">
         <%= form.submit "Publish Post", class: "btn btn-primary btn-lg px-5 me-2" %>
         <%= link_to "Cancel", posts_path, class: "btn btn-secondary btn-lg px-5" %>
       </div>
     <% end %>
   </div>
