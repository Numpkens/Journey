<div class="auth-container">
  <div class="auth-card">
    <h2 class="heading-gradient">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <div class="input-field">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "form-control",
              placeholder: "Enter your email" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <div class="input-field">
          <%= f.password_field :password, autocomplete: "new-password",
              class: "form-control",
              placeholder: "Enter your password" %>
          <% if @minimum_password_length %>
            <div class="form-text">
              <%= @minimum_password_length %> characters minimum
            </div>
          <% end %>
        </div>
      </div>
      <div class="form-group">
             <%= f.label :password_confirmation, class: "form-label" %>
             <div class="input-field">
               <%= f.password_field :password_confirmation, autocomplete: "new-password",
                   class: "form-control",
                   placeholder: "Confirm your password" %>
             </div>
           </div>

           <div class="form-submit">
             <%= f.submit "Sign up", class: "btn btn-primary" %>
           </div>
         <% end %>

         <div class="auth-links">
           <%= link_to "Already have an account? Sign in", new_session_path(resource_name) %>
         </div>
       </div>
     </div>
